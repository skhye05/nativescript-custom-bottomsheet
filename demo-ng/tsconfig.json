{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable",
            "es2017"
        ],
        "baseUrl": ".",
        "paths": {
          "~/*": ["src/*"],
          "@/*": ["src/*"]
        },
        "moduleResolution": "node",
        "removeComments": false
    },
    "include": ["src/tests/**/*.ts", "src/**/*.ios.ts", "src/**/*.android.ts", "../src"],
    "files": ["./src/main.ts", "./references.d.ts", "./src/polyfills.ts"],
    "exclude": [
        "../src/node_modules",
        "node_modules",
        "platforms",
        "e2e"
    ]
}
